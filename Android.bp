// Module cho eBPF program
cc_bpf {
    name: "hook_bpf",
    srcs: ["hook.c"],
    bpf_cflags: [
        "-O2",
        "-g",
    ],
}

// Module cho user-space loader
cc_binary {
    name: "loader",
    srcs: ["loader.c"],
    shared_libs: [
        "libbpf", // nếu bạn đã import libbpf vào tree
    ],
    cflags: [
        "-O2",
        "-g",
    ],
    installable: true,
}
