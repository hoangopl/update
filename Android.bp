cc_binary {
    name: "overlay",
    srcs: ["overlay.cpp"],

    // các lib cần để link
    shared_libs: [
        "libgui",
        "libui",
        "libandroid",
        "libutils",
        "liblog",
        "libcutils",
    ],

    // build target Android, không build host
    host_supported: false,

    // ép build cho arm64, tắt hẳn 32-bit
    multilib: {
        lib32: {
            enabled: false,
        },
        lib64: {
            enabled: true,
        },
    },
}
